<link rel="stylesheet" href="/css/chat.css">
<script defer src="js/telegram.js"></script>
<div class="container marketing">

    <div class="chat" style="position: fixed; bottom: 0; left: 0; z-index: 99999;">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title">Чат</h5>
                </div>
                <form method="post" id='tlgForm' action="">
                    <div class="modal-body " data-chat-scroll style="overflow-y: scroll; overflow: paged-x ">
                        <div class="container">
                            <div style='height: 220px' class="container" type="content">
                                <ul data-chat class="list-unstyled">
                                    {{#each messages}}
                                        <li>{{text}}</li>
                                    {{/each}}
                                </ul>
                            </div>

                        </div>
                    </div>
                    <div class="modal-footer">
                        <textarea type="content" name='message' data-message class='container' placeholder="Введите сообщение..."></textarea>
                        <button type="submit" class="btn btn-primary">Отправить</button>
                    </div>

                </form>
            </div>
        </div>
    </div>

